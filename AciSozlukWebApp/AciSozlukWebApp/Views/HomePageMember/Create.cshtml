@model AciSozlukWebApp.Models.Member
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Sharedd/_LayoutPage1.cshtml";
}

<div class="container mt-1">
    <div class="card shadow">
        <div class="card-body">
            @using (Html.BeginForm("Create", "HomePageMember", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Mesaj"]
                    </div>
                }
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label"><strong>Kullanıcı Adı</strong></label>
                            @Html.EditorFor(x => x.NickName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Mail Adresi</strong></label>
                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Şifre</strong></label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <small class="text-muted">Şifrenizin diğer sitelerle aynı olmamasına dikkat edin.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label"><strong>Doğum Tarihi</strong></label>
                            @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Cinsiyet</strong></label>
                            @Html.DropDownListFor(x => x.Gender, (SelectList)ViewBag.CinsiyetSecim, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>*Profil Resmi</strong></label>
                            <input type="file" name="image" class="form-control" />
                            <small class="text-muted">(*) Zorunlu değildir.</small>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger">Kayıt Ol</button>
                </div>
            }
        </div>
    </div>
</div>



