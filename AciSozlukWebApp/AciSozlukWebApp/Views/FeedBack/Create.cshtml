@model AciSozlukWebApp.Models.FeedBack
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Sharedd/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <div class="float-start">
                <h3><strong>Geri Bildirim İlet</strong></h3>
            </div>
            <div class="float-end">
                <a href="@Url.Action("Index","Home")" style="text-decoration:none">Ana Sayfaya Dön</a>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Mesaj"]
                    </div>
                }
                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Konu</strong>
                    </div>
                    @Html.EditorFor(x => x.Subject, new { htmlAttributes = new { @class = "form-control", @id = "Subject" } })
                </div>
                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Detay</strong>
                    </div>
                    @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control", @id = "Description" } })
                </div>
                <button type="submit">İlet</button>
            }
        </div>
    </div>
</div>


