@model AciSozlukWebApp.Models.FeedBack
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Sharedd/_LayoutPage1.cshtml";
}

<div class="container mt-1">
    <div class="card shadow">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-warning">
                        @TempData["Mesaj"]
                    </div>
                }
                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Konu</strong>
                    </div>
                    @Html.EditorFor(x => x.Subject, new { htmlAttributes = new { @class = "form-control", @id = "Subject", @placeholder = "Konu belirtin." } })
                </div>
                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Detay</strong>
                    </div>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "Description", style = "height:200px;", @placeholder = "Geliştirme isteklerinizi veya düşüncelerinizi buraya belirtebilirsiniz.." })
                </div>
                <button type="submit" class="btn btn-danger">İlet</button>
            }
        </div>
    </div>
</div>


