@model AciSozlukWebApp.Models.MemberRole
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <div class="float-start">
                <h3><strong>Rol Ekleme Sayfası</strong></h3>
            </div>
            <div class="float-end">
                <a href="@Url.Action("Index", "Role")" style="text-decoration:none">Rol Listesine Dön</a>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Mesaj"]
                    </div>
                }

                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Rol Adı</strong>
                    </div>
                    @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", @id = "Name" } })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
                <button type="submit">Oluştur</button>
            }
        </div>
    </div>
</div>


