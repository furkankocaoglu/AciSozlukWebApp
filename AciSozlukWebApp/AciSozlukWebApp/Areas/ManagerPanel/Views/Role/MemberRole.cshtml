@model List<AciSozlukWebApp.Models.Member>
@{
    ViewBag.Title = "MemberRole";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header">
            <h3><strong>Üye Rolleri</strong></h3>
        </div>
        <div class="p-2">
            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success" id="basariMesaji">
                    @TempData["Mesaj"]
                </div>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark ">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı Adı</th>
                            <th>Rol</th>
                            <th>Rol Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td>@member.ID</td>
                                <td>@member.NickName</td>
                                <td>@member.MemberRole.Name</td>
                                <td><a href="@Url.Action("EditRole","Role",new {member.ID})" style="text-decoration:none">Rol Düzenle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#basariMesaji").delay(1000).fadeOut(1000);
        });
    </script>
}
